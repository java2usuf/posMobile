<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="60dp">

        <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@android:drawable/spinner_background"
            android:id="@+id/productname" android:popupBackground="@android:drawable/spinner_dropdown_background"
            android:padding="5dp"
        />

        <Spinner
            android:layout_width="match_parent" android:background="@android:drawable/spinner_background"
            android:layout_height="wrap_content"
            android:id="@+id/qtyspinner" android:popupBackground="@android:drawable/spinner_dropdown_background"
            android:padding="5dp"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/pricelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pricelabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:singleLine="true"
                android:hint="Price" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/totallayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/totalLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Total" />
        </android.support.design.widget.TextInputLayout>






    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab" android:onClick="fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:background="@android:color/holo_blue_bright"
        android:layout_gravity="start|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_input_add"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2" android:onClick="bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:background="@android:color/holo_blue_dark"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_menu_agenda"/>

</android.support.design.widget.CoordinatorLayout>