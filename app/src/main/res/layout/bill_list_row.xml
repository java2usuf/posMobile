<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:cardCornerRadius="2dp" app:cardElevation="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<LinearLayout
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical"
    >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageButton
            android:src="@drawable/abc_ic_clear_mtrl_alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="-"
            android:minWidth="0dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/remove"
            android:layout_margin="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:longClickable="true"
            android:textStyle="bold|normal|italic"
            android:background="#ffffff"
            android:height="0dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="4"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/productTitle"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="#0a1002"
            android:text="" android:layout_weight="2"
            android:gravity="center"
            android:id="@+id/priceview"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="#0a1002"
            android:text="" android:layout_weight="2"
            android:id="@+id/qtyview"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/totalvalue" android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text=""
            android:gravity="center"
            android:textColor="#0a1002"
            />
    </TableRow>

</LinearLayout>


</android.support.v7.widget.CardView>
